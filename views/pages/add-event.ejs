<% include ../partials/header  %>

<div class="container">

	<div class="row">

<form action="http://localhost:4000/event/add" method="post" class="col s12">
      
       <input type="hidden" name="e_id" value="">

	       <div class="form-group row">
	       	   <label for='e_name' class="col-12 col-form-label">Name</label>
	       	   <div class="col-10">
	       	   	 <input type="text" name="e_name" value="" class="form-control" required>
	       	   </div>
	       	
	       </div> 

	         <div class="form-group row">
	       	   <label for='e_start_date' class="col-12 col-form-label">Start date</label>
	       	   <div class="col-10">
	       	   	 <input type="date" name="e_start_date" value="" class="form-control" required>
	       	   </div>
	       	
	       </div> 

	         <div class="form-group row">
	       	   <label for='e_end_date' class="col-12 col-form-label">End date</label>
	       	   <div class="col-10">
	       	   	 <input type="date" name="e_end_date" value="" class="form-control" required>
	       	   </div>
	       	
	       </div> 

	         <div class="form-group row">
	       	   <label for='e_desc' class="col-12 col-form-label">Description</label>
	       	   <div class="col-10">
	       	   	 <textarea name="e_desc" id="e_desc" cols="30" rows="4" class="form-control" required></textarea>
	       	   </div>
	       	
	       </div> 

	         <div class="form-group row">
	       	   <label for='e_location' class="col-12 col-form-label">Location</label>
	       	   <div class="col-10">
	       	   	 <textarea name="e_location" id="e_desc" cols="30" rows="4" class="form-control" required></textarea>
	       	   </div>
	       	
	       </div> 

	         <div class="form-group row">
	       	   <label for='e_location' class="col-12 col-form-label" style="color:#ffffff">Click here to submit</label>
	       	   <div class="col-10">
	       	   	 <input type="submit" name="submit" value="save event" class="btn btn-primary btn-lg">
	       	   </div>
	       	
	       </div> 
	
</form>

</div>



</div>

<% include ../partials/footer %>